{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "correctness": {
        "useUniqueElementIds": {
          "level": "error",
          "options": {
            "excludedComponents": ["Translate"]
          }
        }
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
